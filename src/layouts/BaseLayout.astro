---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  schema?: object | object[];
}

const {
  title,
  description,
  canonical,
  ogImage = '/og-default.svg',
  noindex = false,
  schema,
} = Astro.props;

const siteUrl = 'https://www.dossierpret.fr';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).toString();

const defaultSchema = [
  {
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: 'DossierPrêt',
    url: siteUrl,
    description: 'Outil de diagnostic bancaire pour votre dossier de prêt immobilier.',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'DossierPrêt',
    url: siteUrl,
  },
];

const schemaData = schema || defaultSchema;
---

<!doctype html>
<html lang="fr">
  <head>
    <!-- Anti-flash : appliquer le thème avant le rendu -->
    <script is:inline>
      (function() {
        var stored = localStorage.getItem('theme');
        var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (stored === 'dark' || (!stored && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, siteUrl).toString()} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="DossierPrêt" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, siteUrl).toString()} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(Array.isArray(schemaData) ? schemaData : [schemaData])} />
  </head>
  <body>
    <slot />
  </body>
</html>
