---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { hasPremium } from '../lib/subscription';
import { createServerSupabaseClient } from '../lib/supabase';
import { getUserDiagnostics, getDiagnosticStats } from '../lib/diagnostics';

const user = await Astro.locals.currentUser();
if (!user) return Astro.redirect('/sign-in?redirect=/dashboard');

const userHasPremium = hasPremium(user);
if (!userHasPremium) return Astro.redirect('/premium?upgrade=1');

const supabase = createServerSupabaseClient();
const { data: diagnostics } = await getUserDiagnostics(supabase, user.id, 50);
const stats = await getDiagnosticStats(supabase, user.id);
---

<BaseLayout
  title="Mon suivi — DossierPrêt"
  description="Suivez l'évolution de votre profil emprunteur dans le temps"
>
  <div class="min-h-screen flex flex-col bg-gray-50 dark:bg-slate-900">
    <Navbar currentPath="/dashboard" />

    <main class="flex-1 py-12">
      <div class="container-main">
        <!-- Header -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Mon suivi</h1>
          <p class="text-gray-500 dark:text-slate-400">Évolution de votre profil emprunteur dans le temps</p>
        </div>

        {diagnostics.length === 0 ? (
          <!-- Empty state -->
          <div class="card text-center py-12">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mx-auto mb-4 text-gray-300 dark:text-slate-600">
              <path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/>
            </svg>
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Aucun diagnostic enregistré</h2>
            <p class="text-sm text-gray-500 dark:text-slate-400 mb-6 max-w-md mx-auto">
              Effectuez votre premier diagnostic pour commencer à suivre l'évolution de votre profil.
            </p>
            <a href="/diagnostic" class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-slate-100 text-white dark:text-slate-900 font-semibold text-sm rounded-xl hover:bg-gray-800 dark:hover:bg-white transition-colors">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>
              </svg>
              Lancer un diagnostic
            </a>
          </div>
        ) : (
          <div class="space-y-6">
            <!-- Stats cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              <div class="card">
                <div class="text-xs text-gray-400 dark:text-slate-500 uppercase tracking-wide mb-1">Score actuel</div>
                <div class="text-3xl font-black text-gray-900 dark:text-white">{stats.latestScore}</div>
              </div>
              <div class="card">
                <div class="text-xs text-gray-400 dark:text-slate-500 uppercase tracking-wide mb-1">Progression</div>
                <div class="text-3xl font-black {stats.progression >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}">
                  {stats.progression > 0 ? '+' : ''}{stats.progression}
                </div>
              </div>
              <div class="card">
                <div class="text-xs text-gray-400 dark:text-slate-500 uppercase tracking-wide mb-1">Score moyen</div>
                <div class="text-3xl font-black text-gray-900 dark:text-white">{stats.avgScore}</div>
              </div>
              <div class="card">
                <div class="text-xs text-gray-400 dark:text-slate-500 uppercase tracking-wide mb-1">Diagnostics</div>
                <div class="text-3xl font-black text-gray-900 dark:text-white">{stats.totalCount}</div>
              </div>
            </div>

            <!-- Chart -->
            <div class="card">
              <h2 class="text-base font-semibold text-gray-900 dark:text-white mb-4">Évolution du score</h2>
              <div class="relative h-64">
                <svg viewBox="0 0 800 300" class="w-full h-full" style="overflow: visible;">
                  <!-- Grid lines -->
                  {[0, 25, 50, 75, 100].map(y => (
                    <g>
                      <line x1="40" y1={260 - (y * 2.2)} x2="780" y2={260 - (y * 2.2)} stroke="currentColor" class="text-gray-200 dark:text-slate-700" stroke-width="1" stroke-dasharray="4 4" />
                      <text x="10" y={265 - (y * 2.2)} class="text-gray-400 dark:text-slate-500" font-size="12">{y}</text>
                    </g>
                  ))}

                  <!-- Line chart -->
                  {diagnostics.length > 1 && (
                    <polyline
                      points={diagnostics.slice().reverse().map((d, i) => {
                        const x = 50 + (i * (730 / Math.max(diagnostics.length - 1, 1)));
                        const y = 260 - (d.score * 2.2);
                        return `${x},${y}`;
                      }).join(' ')}
                      fill="none"
                      stroke="currentColor"
                      class="text-gray-900 dark:text-slate-100"
                      stroke-width="3"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  )}

                  <!-- Data points -->
                  {diagnostics.slice().reverse().map((d, i) => {
                    const x = 50 + (i * (730 / Math.max(diagnostics.length - 1, 1)));
                    const y = 260 - (d.score * 2.2);
                    return (
                      <g>
                        <circle cx={x} cy={y} r="5" fill="white" stroke="currentColor" class="text-gray-900 dark:text-slate-100" stroke-width="3" />
                        <text x={x} y={y - 12} text-anchor="middle" class="text-gray-900 dark:text-white" font-size="13" font-weight="600">{d.score}</text>
                      </g>
                    );
                  })}
                </svg>
              </div>
            </div>

            <!-- History table -->
            <div class="card">
              <h2 class="text-base font-semibold text-gray-900 dark:text-white mb-4">Historique</h2>
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead>
                    <tr class="border-b border-gray-200 dark:border-slate-700">
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">Date</th>
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">Score</th>
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">Taux</th>
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">Apport</th>
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">HCSF</th>
                      <th class="text-left text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide pb-3">Type</th>
                    </tr>
                  </thead>
                  <tbody>
                    {diagnostics.map((d, i) => (
                      <tr class="border-b border-gray-100 dark:border-slate-800 hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors">
                        <td class="py-3 text-sm text-gray-700 dark:text-slate-300">
                          {new Date(d.created_at).toLocaleDateString('fr-FR', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' })}
                        </td>
                        <td class="py-3">
                          <span class="text-sm font-semibold {d.score >= 70 ? 'text-green-600 dark:text-green-400' : d.score >= 45 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400'}">
                            {d.score}/100
                          </span>
                        </td>
                        <td class="py-3 text-sm text-gray-700 dark:text-slate-300">{d.taux_endettement.toFixed(1)}&nbsp;%</td>
                        <td class="py-3 text-sm text-gray-700 dark:text-slate-300">{d.apport_pct.toFixed(1)}&nbsp;%</td>
                        <td class="py-3">
                          {d.hcsf_ok ? (
                            <span class="inline-flex items-center gap-1 text-xs font-medium text-green-700 dark:text-green-400">
                              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
                              Oui
                            </span>
                          ) : (
                            <span class="inline-flex items-center gap-1 text-xs font-medium text-red-700 dark:text-red-400">
                              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
                              Non
                            </span>
                          )}
                        </td>
                        <td class="py-3">
                          <span class="inline-block px-2 py-0.5 text-xs font-medium rounded-full {d.diagnostic_type === 'premium' ? 'bg-gray-900 dark:bg-slate-100 text-white dark:text-slate-900' : 'bg-gray-100 dark:bg-slate-800 text-gray-600 dark:text-slate-400'}">
                            {d.diagnostic_type === 'premium' ? 'Premium' : 'Express'}
                          </span>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        )}
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
