---
export const prerender = true;

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function readingTime(body: string): number {
  const words = body.split(/\s+/).length;
  return Math.max(1, Math.ceil(words / 200));
}
---

<BaseLayout
  title="Blog — Guides crédit immobilier | DossierPrêt"
  description="Comprendre le crédit immobilier, les critères bancaires et comment améliorer votre profil emprunteur. Guides pratiques en français."
>
  <div class="min-h-screen flex flex-col">
    <Navbar currentPath="/blog" />

    <main class="flex-1 py-12 sm:py-16">
      <div class="container-main">
        <!-- Header -->
        <div class="mb-10">
          <span class="section-label mb-3 flex">
            <span>Ressources</span>
          </span>
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2">Le blog DossierPrêt</h1>
          <p class="text-lg text-gray-500 dark:text-slate-400 max-w-xl">
            Guides pratiques pour comprendre les critères bancaires et optimiser votre dossier immobilier.
          </p>
        </div>

        <!-- Posts grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
          {posts.map(post => {
            const rt = readingTime(post.body || '');
            const dateStr = post.data.date.toLocaleDateString('fr-FR', { year: 'numeric', month: 'short', day: 'numeric' });
            return (
              <a
                href={`/blog/${post.slug}`}
                class="card hover:shadow-card-md transition-all duration-200 group flex flex-col"
              >
                <div class="flex items-center gap-2 mb-3">
                  <span class="badge badge-gray">{post.data.category}</span>
                  <span class="text-xs text-gray-400 dark:text-slate-500">{rt} min</span>
                </div>
                <h2 class="text-sm font-bold text-gray-900 dark:text-white mb-2 group-hover:text-gray-600 dark:group-hover:text-slate-300 transition-colors leading-snug flex-1">
                  {post.data.title}
                </h2>
                <p class="text-sm text-gray-500 dark:text-slate-400 leading-relaxed mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between mt-auto">
                  <span class="text-xs text-gray-400 dark:text-slate-500">{dateStr}</span>
                  <span class="flex items-center gap-1 text-xs font-medium text-gray-900 dark:text-slate-200">
                    Lire
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                  </span>
                </div>
              </a>
            );
          })}
        </div>

        {posts.length === 0 && (
          <div class="text-center py-16 text-gray-400 dark:text-slate-500">
            <p>Aucun article publié pour l'instant.</p>
          </div>
        )}
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
