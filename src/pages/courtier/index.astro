---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { isPro } from '../../lib/subscription';
import { createServerSupabaseClient } from '../../lib/supabase';
import { getClients, getDossiers } from '../../lib/courtier';
import type { CourtierClient, CourtierDossier } from '../../lib/courtier-types';

const { userId } = Astro.locals.auth();
if (!userId) return Astro.redirect('/connexion');

const user = await Astro.locals.currentUser();
if (!isPro(user)) return Astro.redirect('/premium?upgrade=pro');

const supabase = createServerSupabaseClient();

const clients = await getClients(userId, supabase);

// Récupérer tous les dossiers de tous les clients
const allDossiers: CourtierDossier[] = [];
for (const c of clients) {
  const d = await getDossiers(c.id, supabase);
  allDossiers.push(...d);
}

const stats = {
  total:     clients.length,
  enCours:   allDossiers.filter(d => d.statut === 'en_cours').length,
  accordes:  allDossiers.filter(d => d.statut === 'accorde').length,
  refuses:   allDossiers.filter(d => d.statut === 'refuse').length,
};

const prenom = user?.firstName ?? 'courtier';
---

<BaseLayout title="Dashboard Courtier | DossierPrêt" description="Votre espace courtier DossierPrêt." noindex={true}>
  <div class="min-h-screen flex flex-col">
    <Navbar currentPath="/courtier" />

    <main class="flex-1 py-12 bg-gray-50 dark:bg-slate-900 transition-colors duration-200">
      <div class="container-main">

        <div class="mb-10">
          <p class="text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-1">Espace courtier</p>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Bonjour, {prenom}</h1>
          <p class="text-gray-500 dark:text-slate-400 mt-1">Gérez vos clients et suivez l'évolution de leurs dossiers.</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-10">
          {[
            { label: 'Clients',    value: stats.total,    color: 'text-gray-900 dark:text-white' },
            { label: 'En cours',   value: stats.enCours,  color: 'text-blue-600 dark:text-blue-400' },
            { label: 'Accordés',   value: stats.accordes, color: 'text-green-600 dark:text-green-400' },
            { label: 'Refusés',    value: stats.refuses,  color: 'text-red-600 dark:text-red-400' },
          ].map(s => (
            <div class="card text-center">
              <p class={`text-3xl font-bold ${s.color}`}>{s.value}</p>
              <p class="text-xs text-gray-500 dark:text-slate-400 mt-1">{s.label}</p>
            </div>
          ))}
        </div>

        <!-- Clients récents -->
        <div class="card">
          <div class="flex items-center justify-between mb-5">
            <h2 class="text-sm font-semibold text-gray-900 dark:text-white">Clients récents</h2>
            <a href="/courtier/clients" class="text-xs text-gray-500 dark:text-slate-400 hover:text-gray-900 dark:hover:text-white transition-colors">
              Voir tous →
            </a>
          </div>

          {clients.length === 0 ? (
            <div class="text-center py-8">
              <p class="text-sm text-gray-400 dark:text-slate-500 mb-4">Aucun client encore.</p>
              <a href="/courtier/clients" class="inline-flex items-center gap-2 px-4 py-2.5 bg-gray-900 dark:bg-slate-100 text-white dark:text-slate-900 text-sm font-semibold rounded-lg hover:bg-gray-800 dark:hover:bg-white transition-colors">
                Ajouter un client
              </a>
            </div>
          ) : (
            <div class="divide-y divide-gray-100 dark:divide-slate-700/50">
              {clients.slice(0, 5).map(c => (
                <a href={`/courtier/clients/${c.id}`} class="flex items-center justify-between py-3 hover:bg-gray-50 dark:hover:bg-slate-700/30 -mx-2 px-2 rounded-lg transition-colors">
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">{c.nom}</p>
                    {c.email && <p class="text-xs text-gray-400 dark:text-slate-500">{c.email}</p>}
                  </div>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" class="text-gray-300 dark:text-slate-600"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
              ))}
            </div>
          )}
        </div>

      </div>
    </main>
    <Footer />
  </div>
</BaseLayout>
